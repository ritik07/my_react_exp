<%- include('../partials/header') %>
    <h1>
        Edit Products
        <%= foundproduct.name  %>
    </h1>

    <form action="/campgrounds/category/<%=foundcategory._id%>/<%=foundproduct._id%>" method="POST">
        <div style="width: 30%; margin-top: 25px auto;">

            <div class="form-group">
                <input class="form-control" type="text" name="editproduct[name]" value="<%=foundproduct.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="editproduct[image]" value="<%=foundproduct.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="editproduct[description]" placeholder="<%=foundproduct.description%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="editproduct[price]" value="<%=foundproduct.price%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="editproduct[quantity]" placeholder="<%=foundproduct.quantity%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="editproduct[shopname]" placeholder="<%=foundproduct.shopname%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="editproduct[phonenumber]" placeholder="<%=foundproduct.phonenumber%>">
            </div>
            <button class="btn btn-success">submit</button>

        </div>

    </form>

    <%- include('../partials/footer') %>