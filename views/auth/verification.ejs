<%- include('../partials/header') %>
    <h1>Verificartion</h1>

    <% usersfound.forEach(function(callvalue){%>

        <form action="/verification" method="POST">
            <div class="container">
                <div class="d-flex d-xl-flex justify-content-center justify-content-xl-center align-content-center align-items-center">

                    <div class="d-flex d-xl-flex justify-content-center justify-content-xl-center align-content-center align-items-center">
                        <h3>
                            Name:
                            <%= callvalue.username %>
                        </h3>
                    </div>






                </div>

                <div class="d-flex d-xl-flex justify-content-center justify-content-xl-center align-content-center align-items-center">
                    <div class="d-flex d-xl-flex justify-content-center justify-content-xl-center align-content-center align-items-center">
                        <h3>
                            Status
                        </h3>
                    </div>
                </div>

                <div class="d-flex d-xl-flex justify-content-center justify-content-xl-center align-content-center align-items-center">
                    <div class="d-flex d-xl-flex justify-content-center justify-content-xl-center align-content-center align-items-center">
                        <h3>
                            User Type:
                            <% if (callvalue.isadmin == 0 && callvalue.ismanufacture == 0 && callvalue.isdboy == 0){%>
                                Customer
                                <%} else if(callvalue.isadmin == 1){%>
                                    Admin
                                    <%}else if(callvalue.ismanufacture == 1){%>
                                        Manufacture
                                        <%} else{%>
                                            Delivery Boy
                                            <%}%>
                        </h3>
                    </div>

                </div>
                <div class="d-flex d-xl-flex justify-content-center justify-content-xl-center align-content-center align-items-center">
                    <div class="d-flex d-xl-flex justify-content-center justify-content-xl-center align-content-center align-items-center">
                        <a class="btn btn-success" href="/verification/<%= callvalue._id%>/confirmation">
                           Change User Type
                         </a>
                    </div>
                </div>
            </div>

        </form>


        <%    }) %>