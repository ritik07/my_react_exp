<%- include('../partials/header') %>
    <h1>
        Add Products
    </h1>

    <form action="/campgrounds" method="POST">
        <div style="width: 30%; margin-top: 25px auto;">

            <div class="form-group">
                <input required class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <input required class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <input required class="form-control" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group">
                <input required class="form-control" type="number" name="price" placeholder="price">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="quantity" placeholder="quantity">
            </div>
            <div class="form-group">
                <input required class="form-control" type="text" name="shopname" placeholder="shopname">
            </div>
            <div class="form-group">
                <input required maxlength="10" minlength="10" class="form-control" type="number" name="phonenumber" placeholder="phonenumber">
            </div>

            <button class="btn btn-success">submit</button>

        </div>

    </form>

    <%- include('../partials/footer') %>