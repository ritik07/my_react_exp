<%- include("../partials/header"); %>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">E-Cart</p>
                <!-- <div class="list-group">
                    <li class="list-group-item active">item 1</li>
                    <li class="list-group-item">item 1</li>
                    <li class="list-group-item">item 1</li>
                </div> -->
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= work.image %>" alt="">
                    <div class="caption-full">
                        <h4 class="pull-right">
                            Rs.
                            <%= work.price %>

                                <p>
                                    <%= work.quantity %>
                                </p>
                        </h4>
                        <a class="btn btn-success pull-right" href="/campgrounds/<%= work._id %>/address">Buy</a>
                        <h2>
                            <%= work.name %>
                        </h2>
                        <h4 style="font-style: italic;">
                            A Quality product by-
                            <%= work.shopname %>
                        </h4>
                        <p>
                            <%= work.description %>
                        </p>
                        <% if(currentUser && work.author.id.equals(currentUser._id)|| currentUser && currentUser.isadmin == 1 ){%>
                            <a href="/campgrounds/<%= work._id %>/edit" class="btn btn-warning">Edit Product</a>
                            <form action="/campgrounds/<%= work._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger" style="margin-top: 20px;">
                           Remove Product
                       </button>
                            </form>
                            <%  } %>

                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= work._id %>/comments/new">Add new Comment</a>
                    </div>
                    <hr>
                    <% work.comments.forEach(function(comment){%>
                        <div class="row">
                            <div class="col-md-12">
                                <Strong><%= comment.author.username%></Strong> -
                                <span class="pull-right">10 days ago</span>
                                <p>
                                    <%= comment.text %>
                                </p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id )|| currentUser && currentUser.isadmin == 1){%>
                                    <a class="btn btn-xs btn-warning" href="<%=work._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                    <form style="margin-top: 10px;" action="<%=work._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                        <input type="submit" class="btn btn-xs btn-danger" value="Remove">
                                    </form>
                                    <%  } %>
                            </div>

                        </div>


                        <% }) %>
                </div>
            </div>
        </div>
    </div>